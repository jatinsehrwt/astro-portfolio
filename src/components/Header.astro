---
import removeTrailingSlash from "@/utils/removeTrailingSlash";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header
  class="fixed left-0 right-0 top-0 z-[500] block justify-self-start border-b border-neutral-400 bg-gradient-to-b from-transparent to-neutral-900/75 backdrop-blur-lg backdrop-saturate-100"
>
  <div
    class="relative z-10 mx-auto flex w-full max-w-4xl flex-row items-center justify-between px-6 py-3"
  >
    <a
      href="/"
      aria-current="page"
      class="inline-flex appearance-none items-center rounded-md border-0 bg-transparent p-0 text-2xl font-bold hover:text-neutral-300"
      >JS</a
    >

    <nav role="navigation">
      <ul role="list" class="flex flex-row gap-2">
        <li>
          <a
            href="/"
            class:list={{
              ["hover:text-neutral-100"]: true,
              ["text-neutral-100"]: pathname === "/",
            }}>Home</a
          >
        </li>
        <li>/</li>
        <li>
          <a
            href="/posts"
            class:list={{
              ["hover:text-neutral-100"]: true,
              ["text-neutral-100"]: pathname === "/posts",
            }}>Posts</a
          >
        </li>
      </ul>
    </nav>

    <!-- TODO: Insert a dark mode toggle here -->
  </div>
</header>
