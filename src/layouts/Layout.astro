---
import theme from "@/data/theme";
import BlurCircle from "@/components/shared/BlurCircle.astro";
import Header from "../components/Header.astro";
import Footer from "@/components/Footer.astro";
import SEOTags from "@/components/seo/SEOTags.astro";

import "@fontsource/open-sans";
import "@/styles/tailwind.css";
import "@/styles/post.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags title={title} />

  <body
    class="mx-auto flex min-h-screen flex-col flex-nowrap content-center items-stretch gap-8 bg-neutral-900 pb-8 pt-16 text-sm text-neutral-400 sm:text-base"
  >
    <Header />
    <BlurCircle position="top" color={theme.colors.blur.top} />
    <BlurCircle position="bottom" color={theme.colors.blur.bottom} />
    <slot />
    <Footer />
  </body>
</html>
